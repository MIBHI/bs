<div class="alert alert-{{type}}{{#if dismissible}} alert-dismissible{{/if}}" role="alert">
	<div style="position: absolute;top: 0;bottom: 0;left: 0;right: 0;overflow: hidden;z-index:1">
		<i style="position: absolute;bottom: -30px;right:-30px;font-size:10em;opacity: .2;display:none" class="alert-icon {{icon}}"></i>
	</div>
	{{#if dismissible}}
	<button style="position: relative; z-index: 2" type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	{{/if}}
	<div style="position: relative; z-index: 2">

		{{#if hasTitle}}
			<h4 {{#if translateTitle}}data-i18n="{{title}}"{{/if}}>
				{{title}}
			</h4><br>
		{{/if}}

		<div class="content" {{#if translate}}data-i18n="{{msg}}"{{/if}}>
			{{#unless translate}}{{{msg}}}{{/unless}}
		</div>
	</div>
</div>
